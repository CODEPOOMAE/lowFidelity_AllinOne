<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HouseKeepingBook">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:onClick="onButtonClick"
            app:srcCompat="@drawable/mcv_action_previous"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="69dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:text="                                                              "
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="357dp"
            tools:layout_editor_absoluteY="7dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="캘린더"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="75dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="137dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="지출내역"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="75dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="140dp"
            android:layout_height="46dp"
            android:layout_gravity="right"
            android:text="통계"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="75dp" />

    </LinearLayout>

    <coms.example.allinonelowfiproject.mainCalendar.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/CalenderForHKB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:mcv_selectionColor="@color/thm1"
        app:mcv_showOtherDates="defaults" />

    <FrameLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="606dp"
        android:layout_gravity="top|center">

        <Button
            android:id="@+id/Btn1_plusminus"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="일간" />

        <Button
            android:id="@+id/Btn2_plusminus"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="주간" />

        <Button
            android:id="@+id/Btn3_plusminus"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="월간" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/Button1_wish"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="추가" />
        <Button
            android:id="@+id/Button2_wish"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="대표설정" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/FLForcalendarAddButton"
        android:layout_width="match_parent"
        android:layout_height="606dp"
        android:layout_gravity="top|center" />


</LinearLayout>

